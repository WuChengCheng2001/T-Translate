{
  "manifest_version": 3,
  "name": "T-Translate (Dual Trigger & Fix)",
  "version": "7.2",
  "description": "Select text, press 't' OR use Right Click Menu. Default: Fixed Bottom-Right. Draggable.",
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}